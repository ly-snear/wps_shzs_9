<UserControl x:Class="CalligraphyAssistantMain.Controls.ListBoxItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d"   
             Name="control"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="40" Width="{Binding Width,ElementName=control}" Tag="{Binding Text,ElementName=control}" HorizontalAlignment="Center">
        <TextBlock Margin="0,0,0,5" FontSize="14" Text="{Binding Text,ElementName=control}" FontWeight="Bold" Foreground="#3A3A3A" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <Image Height="5" Margin="0,0,0,5" VerticalAlignment="Bottom" Source="/CalligraphyAssistantMain;component/Images/BorderBottom.png"></Image>
    </Grid>
</UserControl>
