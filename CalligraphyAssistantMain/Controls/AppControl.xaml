<UserControl x:Class="CalligraphyAssistantMain.Controls.AppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Cursor="Hand" Width="90" Height="90" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Image x:Name="image" Width="48" Height="48" VerticalAlignment="Top" Margin="0,10,0,0">
        </Image>
        <TextBlock x:Name="titleLb" Text="" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="14" Margin="0,0,0,10"/>
    </Grid>
</UserControl>
