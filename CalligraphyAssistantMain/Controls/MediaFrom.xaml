<Window x:Class="CalligraphyAssistantMain.Controls.MediaFrom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
        mc:Ignorable="d"
        Title="MediaFrom" Height="600" Width="800">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Center" Height="482" VerticalAlignment="Top" Width="707" Margin="0,10,0,0"/>
        <Button x:Name="btnPlay" Content="播放" HorizontalAlignment="Left" Margin="247,5,0,0" VerticalAlignment="Top" Width="75" Click="btnPlay_Click" Height="19" Grid.Row="1"/>
        <Button x:Name="btnPause" Content="暂停" HorizontalAlignment="Left" Margin="345,5,0,0" VerticalAlignment="Top" Width="75" Click="btnPause_Click" Height="19" Grid.Row="1"/>
        <Button x:Name="btnStop" Content="停止" HorizontalAlignment="Left" Margin="443,5,0,0" VerticalAlignment="Top" Width="75" Click="btnStop_Click" Height="19" Grid.Row="1"/>
    </Grid>
</Window>
