<Window x:Class="CalligraphyAssistantMain.Controls.works.PlayVideo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls.works"
        mc:Ignorable="d"
        Title="PlayVideo"  d:DesignHeight="1080" d:DesignWidth="1920" WindowState="Maximized"  AllowsTransparency="True"  WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Viewbox>
            <local:PlayMediaControl Width="1920" Height="1080" x:Name="media" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Viewbox>

        <Image Name="mClose" Height="40" Width="40" Source="pack://application:,,,/CalligraphyAssistantMain;component/Images/Icon18.png" MouseLeftButtonDown="MClose_MouseLeftButtonDown" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" />
    </Grid>
</Window>
