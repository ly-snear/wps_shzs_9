<UserControl x:Class="CalligraphyAssistantMain.Controls.ImageTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Height="30" BorderBrush="#C6C6C6" Background="#E4E4E4" BorderThickness="1" Margin="0,0,10,0">
        <Grid>
            <TextBlock Margin="10,0,25,0" HorizontalAlignment="Center" FontSize="14" Text="{Binding Title}" VerticalAlignment="Center"/>
            <Image Cursor="Hand" Width="14" Height="14" HorizontalAlignment="Right" Margin="0,0,5,0" Source="/CalligraphyAssistantMain;component/Images/Close.png" MouseLeftButtonDown="Image_MouseLeftButtonUp"></Image>
        </Grid> 
    </Border>
</UserControl>
