<UserControl x:Class="CalligraphyAssistantMain.Controls.ImageItemControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="15" Width="268" Height="230" BorderThickness="3" BorderBrush="#9E9E9E">
        <Grid>
            <Image x:Name="image" Width="190" Height="140"></Image>
            <Image x:Name="deleteBtn" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-20,-25" Width="42" Height="52" Source="/CalligraphyAssistantMain;component/Images/CloseButton.png" MouseLeftButtonDown="deleteBtn_MouseLeftButtonUp"></Image>
        </Grid>
    </Border>
