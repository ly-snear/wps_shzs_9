<UserControl x:Class="CalligraphyAssistantMain.Controls.CameraPresetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="2" Cursor="Hand" BorderThickness="1" Width="40" Height="34" CornerRadius="3" MouseLeftButtonDown="Border_MouseLeftButtonUp">
        <Border.Background>
            <ImageBrush ImageSource="{Binding BackImage}" Stretch="Uniform"/>
        </Border.Background>
        <TextBlock Foreground="#333" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding Number}"></TextBlock>
    </Border>
</UserControl>
