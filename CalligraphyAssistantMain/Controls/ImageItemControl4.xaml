<UserControl x:Class="CalligraphyAssistantMain.Controls.ImageItemControl4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalligraphyAssistantMain.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CalligraphyAssistantMain;component/Style/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Margin="15" Width="268" Height="230" BorderThickness="3" BorderBrush="#9E9E9E">
        <Grid>
            <Image x:Name="image" Cursor="Hand" Width="190" Height="140"  MouseLeftButtonDown="image_MouseLeftButtonDown" Source="/CalligraphyAssistantMain;component/Images/Loading3.png"></Image>
            <CheckBox x:Name="checkBox" Cursor="Hand" Style="{StaticResource CheckBoxStyle}" IsChecked="False" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,15"/>
        </Grid>
    </Border>
</UserControl>
